<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_background_selector"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/curso_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/curso_txt"
            android:text="Curso:"
            style="@style/listaCursos" />

        <TextView
            android:id="@+id/nom_curso_txt"
            style="@style/listaCursos" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grupo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curso_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grupo_txt"
            android:text="Grupo:"
            style="@style/listaCursos" />

        <TextView
            android:id="@+id/nom_grupo_txt"
            style="@style/listaCursos" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/codigo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grupo_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/codigo_txt"
            android:text="CÃ³digo:"
            style="@style/listaCursos" />

        <TextView
            android:id="@+id/nom_codigo_txt"
            style="@style/listaCursos" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profesor_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codigo_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profesor_txt"
            android:text="Profesor:"
            style="@style/listaCursos" />

        <TextView
            android:id="@+id/nom_profesor_txt"
            style="@style/listaCursos" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEvaluar"
        style="@style/boton_evaluar"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/btn_evaluar"
        android:textSize="12sp" />

</RelativeLayout>